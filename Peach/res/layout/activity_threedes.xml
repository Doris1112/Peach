<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_activity_title"
        style="@style/titlePeach" />

    <ScrollView style="@style/contentPeach" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_threedes_key"
                style="@style/edittextWhiteFrame"
                android:hint="@string/PleaseEnterTheKey" />

            <EditText
                android:id="@+id/et_threedes_encrypt_text"
                style="@style/edittextWhiteFrame"
                android:hint="@string/PleaseEnterTheEncryptedString" />

            <Button
                style="@style/buttonWhiteFrame"
                android:onClick="encryptString"
                android:text="@string/encrypt" />

            <TextView
                android:id="@+id/tv_threedes_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10pt" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>