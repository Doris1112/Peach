<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog_popupwindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_paddingLeft"
    android:paddingRight="@dimen/activity_paddingRight"
    android:paddingBottom="@dimen/activity_paddingBottom"
    android:paddingTop="@dimen/activity_paddingTop_statusBar"
    android:background="@color/peachThemeColor"
    android:orientation="vertical">

    <Button
        style="@style/buttonWhiteFrame"
        android:onClick="customMenuBar"
        android:text="@string/customMenuBar" />
    
    <Button
        style="@style/buttonWhiteFrame"
        android:onClick="spinner"
        android:text="@string/spinner" />
    
    <Button
        style="@style/buttonWhiteFrame"
        android:onClick="imitationWeChat"
        android:text="@string/imitationWeChat" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/activity_padding"
        android:paddingBottom="@dimen/activity_padding"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/iv_dialog_popupwindow"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/ic_launcher"/>
        
        <Button
            style="@style/buttonWhiteFrame"
            android:onClick="choosePicture"
            android:text="@string/choosePicture" />
        
    </LinearLayout>

</LinearLayout>