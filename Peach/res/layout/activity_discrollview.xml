<com.doris.peachlibrary.view.discrollview.DiscrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@drawable/ic_scrollbar" >

    <com.doris.peachlibrary.view.discrollview.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@android:color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="25dp"
            android:text="@string/DoYouLoveCheese"
            android:textColor="@android:color/black"
            android:textSize="72sp"
            tools:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#007788"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_threshold="0.3" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/cheese1"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft|fromBottom"
            tools:ignore="contentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            discrollve:discrollve_fromBgColor="#88EE66"
            discrollve:discrollve_toBgColor="#000000" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:src="@drawable/cheese2"
            discrollve:discrollve_translation="fromRight"
            tools:ignore="contentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/Whenthecheese"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/ilovecheese_heart"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true"
            tools:ignore="contentDescription" />

        <com.doris.peach.activity.discrollview.DiscrollvablePurpleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:orientation="vertical"
            tools:visibility="gone" >

            <ImageView
                android:id="@+id/purpleView1"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:alpha="0"
                android:src="@drawable/cheese1"
                android:translationX="-150dp"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/purpleView2"
                android:layout_width="220dp"
                android:layout_height="110dp"
                android:layout_gravity="right"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="15dp"
                android:alpha="0"
                android:src="@drawable/cheese2"
                android:translationX="100dp"
                tools:ignore="contentDescription" />
        </com.doris.peach.activity.discrollview.DiscrollvablePurpleLayout>

        <com.doris.peach.activity.discrollview.DiscrollvablePathLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:padding="10dp" >

            <TextView
                android:id="@+id/pathView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/Whenthecheese"
                android:textSize="18sp" />
        </com.doris.peach.activity.discrollview.DiscrollvablePathLayout>

        <com.doris.peach.activity.discrollview.DiscrollvableRedLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@android:color/holo_red_dark"
            tools:visibility="gone" >

            <TextView
                android:id="@+id/redView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/Whenthecheese1"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/redView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:alpha="0.0"
                android:scaleX="0.1"
                android:scaleY="0.1"
                android:src="@drawable/cheese3"
                android:translationY="50dp"
                tools:ignore="contentDescription" />
        </com.doris.peach.activity.discrollview.DiscrollvableRedLayout>

        <com.doris.peach.activity.discrollview.DiscrollvableGreenLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            tools:visibility="gone" >

            <TextView
                android:id="@+id/greenView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/finally_"
                android:textSize="36sp"
                android:textStyle="bold"
                android:translationY="-50dp" />
        </com.doris.peach.activity.discrollview.DiscrollvableGreenLayout>

        <com.doris.peach.activity.discrollview.DiscrollvableLastLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/lastView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:src="@drawable/ilovecheese_i"
                android:translationX="-200dp"
                android:translationY="-200dp"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/lastView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/lastView3"
                android:alpha="0"
                android:src="@drawable/ilovecheese_heart"
                android:translationX="200dp"
                android:translationY="200dp"
                tools:ignore="contentDescription" />

            <ImageView
                android:id="@+id/lastView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastView1"
                android:layout_gravity="center"
                android:alpha="0"
                android:src="@drawable/ilovecheese_cheese"
                android:translationY="200dp"
                tools:ignore="contentDescription" />
        </com.doris.peach.activity.discrollview.DiscrollvableLastLayout>
    </com.doris.peachlibrary.view.discrollview.DiscrollViewContent>

</com.doris.peachlibrary.view.discrollview.DiscrollView>