<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="edittextWhiteFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/ic_black_frame</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="buttonWhiteFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:background">@drawable/selector_btn_black_frame</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dip</item>
        <item name="android:textSize">8pt</item>
    </style>

</resources>
